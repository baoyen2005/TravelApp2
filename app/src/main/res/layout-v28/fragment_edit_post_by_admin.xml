<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".view.admin.AdminAddPostFragment">

 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:orientation="vertical"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintBottom_toBottomOf="parent"
     >

     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <ImageView
             android:id="@+id/imgTourist1InEditPost"
             android:background="@drawable/custom_image_tourist_first"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintRight_toRightOf="parent"
             android:layout_width="match_parent"
             android:scaleType="centerCrop"
             android:layout_height="220dp"/>
         <ImageView
             android:id="@+id/imgTourist2EditPost"
             android:layout_width="0dp"
             android:layout_height="70dp"
             android:background="@drawable/custom_image_tourists_after"
             android:layout_marginStart="25dp"
             android:layout_marginTop="20dp"
             android:scaleType="centerCrop"
             app:layout_constraintTop_toBottomOf="@id/imgTourist1InEditPost"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintWidth_percent="0.2"/>

         <ImageView
             android:id="@+id/imgTourist3InEditPost"
             android:layout_width="0dp"
             android:layout_height="70dp"
             android:layout_marginStart="10dp"
             android:layout_marginTop="20dp"
             android:scaleType="centerCrop"
             android:background="@drawable/custom_image_tourists_after"
             app:layout_constraintTop_toBottomOf="@id/imgTourist1InEditPost"
             app:layout_constraintLeft_toRightOf="@id/imgTourist2EditPost"
             app:layout_constraintWidth_percent="0.2"/>

         <ImageView
             android:id="@+id/imgTourist4InEditPost"
             android:layout_width="0dp"
             android:layout_height="70dp"
             android:layout_marginStart="10dp"
             android:layout_marginTop="20dp"
             android:scaleType="centerCrop"
             android:background="@drawable/custom_image_tourists_after"
             app:layout_constraintTop_toBottomOf="@id/imgTourist1InEditPost"
             app:layout_constraintLeft_toRightOf="@id/imgTourist3InEditPost"
             app:layout_constraintWidth_percent="0.2" />

         <ImageView
             android:id="@+id/imgTourist5InEditPost"
             android:layout_width="0dp"
             android:layout_height="70dp"
             android:layout_marginStart="10dp"
             android:layout_marginEnd="25dp"
             android:layout_marginTop="20dp"
             android:scaleType="centerCrop"
             android:background="@drawable/custom_image_tourists_after"
             app:layout_constraintTop_toBottomOf="@id/imgTourist1InEditPost"
             app:layout_constraintLeft_toRightOf="@id/imgTourist4InEditPost"
             app:layout_constraintWidth_percent="0.2"/>

         <EditText
             android:id="@+id/edtTouristDestinationNameEditPost"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:layout_marginStart="25dp"
             android:layout_alignParentTop="true"
             android:layout_marginTop="30dp"
             android:textSize="24sp"
             android:fontFamily="@font/merriweatherbold"
             android:textColor="@color/black"
             android:hint="@string/tourist_destination_name"
             android:background="@color/background"
             app:layout_constraintTop_toBottomOf="@id/imgTourist5InEditPost"
             app:layout_constraintStart_toStartOf="parent"
             />
         <ImageView
             android:id="@+id/iconLocationInEditPost"
             android:src="@drawable/iconlocation"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintTop_toBottomOf="@id/edtTouristDestinationNameEditPost"
             android:layout_marginTop="30dp"
             android:layout_marginStart="25dp"
             android:layout_width="18dp"
             android:layout_height="18dp"/>
         <EditText
             android:id="@+id/edtTouristPlaceEditPost"
             android:layout_width="wrap_content"
             android:layout_height="21dp"
             android:layout_marginStart="20dp"
             android:layout_alignParentTop="true"
             android:textSize="14sp"
             android:fontFamily="@font/poppinsregular"
             android:background="@color/background"
             android:hint="@string/address_for_tourist_place"
             android:layout_marginTop="30dp"
             app:layout_constraintStart_toEndOf="@id/iconLocationInEditPost"
             app:layout_constraintTop_toBottomOf="@id/edtTouristDestinationNameEditPost"
             />
         <EditText
             android:id="@+id/edtLatitudeEditPost"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginStart="25dp"
             android:layout_alignParentTop="true"
             android:textSize="14sp"
             android:fontFamily="@font/poppinsregular"
             android:background="@color/background"
             android:hint="@string/latitude_of_location"
             android:layout_marginTop="30dp"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@id/edtTouristPlaceEditPost"
             />
         <EditText
             android:id="@+id/edtLongitudeEditPost"
             android:layout_width="wrap_content"
             android:layout_height="21dp"
             android:layout_marginStart="20dp"
             android:layout_marginEnd="25dp"
             android:layout_alignParentTop="true"
             android:textSize="14sp"
             android:fontFamily="@font/poppinsregular"
             android:background="@color/background"
             android:hint="@string/longitude_of_place"
             android:layout_marginTop="30dp"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toBottomOf="@id/edtTouristPlaceEditPost"
             />
         <TextView
             android:id="@+id/tvAboutEditPost"
             android:text="@string/about"
             android:textSize="20sp"
             android:layout_marginTop="40dp"
             android:layout_marginStart="25dp"
             app:layout_constraintTop_toBottomOf="@id/edtLatitudeEditPost"
             app:layout_constraintLeft_toLeftOf="parent"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

         <EditText
             android:id="@+id/edtTypeInEditPost"
             android:hint="@string/type"
             android:textSize="20sp"
             android:layout_marginTop="30dp"
             android:background="@color/background"
             android:layout_marginEnd="25dp"
             android:textColor="@color/black"
             app:layout_constraintTop_toBottomOf="@id/edtLatitudeEditPost"
             app:layout_constraintRight_toRightOf="parent"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         <EditText
             android:id="@+id/edtContentEditPost"
             android:textSize="20sp"
             android:layout_marginTop="20dp"
             android:layout_marginStart="25dp"
             android:layout_marginEnd="25dp"
             android:hint="@string/enter_content"
             android:background="@color/background"
             app:layout_constraintTop_toBottomOf="@id/tvAboutEditPost"
             app:layout_constraintLeft_toLeftOf="parent"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>
         <Button
             android:id="@+id/btnSaveEditPost"
             app:layout_constraintTop_toBottomOf="@id/edtContentEditPost"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             android:text="@string/save"
             android:textSize="20sp"
             android:textAllCaps="false"
             android:layout_marginTop="40dp"
             android:layout_marginBottom="20dp"
             android:background="@drawable/custom_btn_create"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
     </androidx.constraintlayout.widget.ConstraintLayout>
 </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>