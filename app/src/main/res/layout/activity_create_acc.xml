<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".view.signup.CreateAccActivity">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:id="@+id/linear"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           android:orientation="horizontal"
           android:layout_marginTop="20dp"
           android:padding="12dp"
           android:layout_marginRight="24dp"
           android:layout_marginLeft="24dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/iconBackCreateAcc"
               android:layout_gravity="center"
               android:src="@drawable/ic_baseline_arrow_back_ios_24"
               android:layout_width="24dp"
               android:layout_height="24dp"/>
           <TextView
               android:text="Back"
               android:textSize="20sp"
               android:layout_marginLeft="20dp"
               android:textColor="@color/black"
               android:gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="24dp"/>
       </LinearLayout>
       <TextView
           android:id="@+id/title_acc"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Hello, create your account here!"
           android:padding="8dp"
           android:layout_marginRight="24dp"
           android:layout_marginLeft="24dp"
           android:fontFamily="@font/nunito"
           android:textSize="20sp"
           android:textColor="#FF80AB"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/linear"
           />
       <androidx.cardview.widget.CardView
           android:id="@+id/cardViewImage"
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:layout_marginTop="20dp"
           app:cardCornerRadius="75dp"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/title_acc">

           <ImageView
               android:id="@+id/imgavt_createAcc"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:scaleType="centerCrop"
               android:src="@drawable/useravatar" />
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/cardviewImage2"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:backgroundTint="#808080"
           app:cardCornerRadius="50dp"
           app:layout_constraintBottom_toBottomOf="@id/cardViewImage"
           app:layout_constraintRight_toRightOf="@id/cardViewImage">

           <ImageView
               android:id="@+id/img_add_avatar_createAcc"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:layout_gravity="center"
               android:src="@drawable/ic_baseline_photo_camera_24" />
       </androidx.cardview.widget.CardView>

       <LinearLayout
           android:id="@+id/linear1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/cardviewImage2"
           android:layout_marginLeft="24dp"
           android:layout_marginTop="20dp"
           android:orientation="horizontal"
           android:background="@drawable/custom_login_edittext"
           android:layout_marginRight="24dp"
           android:padding="8dp"
           >
           <ImageView
               android:id="@+id/iconName"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_marginLeft="10dp"
               android:layout_gravity="center"
               android:src="@drawable/nameuser"
               app:layout_constraintLeft_toLeftOf="parent"
               />

           <EditText
               android:id="@+id/edtUserNameCreateAcc"
               android:layout_width="match_parent"
               android:layout_gravity="center"
               android:layout_height="40dp"
               android:layout_marginLeft="10dp"
               android:background="@drawable/custom_edtext"
               android:hint="Username"
               android:padding="8dp" />
       </LinearLayout>

       <LinearLayout
           android:id="@+id/linear2"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/linear1"
           android:layout_marginLeft="24dp"
           android:layout_marginTop="15dp"
           android:layout_marginRight="24dp"
           android:orientation="horizontal"
           android:background="@drawable/custom_login_edittext"
           android:padding="8dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/iconPhone"
               android:layout_width="32dp"
               android:layout_height="40dp"
               android:layout_marginLeft="10dp"
               android:layout_gravity="center"
               android:src="@drawable/phoneuser" />

           <EditText
               android:id="@+id/edtUserPhoneCreateAcc"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:layout_gravity="center"
               android:layout_marginLeft="10dp"
               android:background="@drawable/custom_edtext"
               android:hint="Phone"
               android:padding="8dp"
               />

       </LinearLayout>

       <LinearLayout
           android:id="@+id/linear3"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/linear2"
           android:layout_marginLeft="24dp"
           android:layout_marginTop="15dp"
           android:layout_marginRight="24dp"
           android:padding="8dp"
           android:orientation="horizontal"
           android:background="@drawable/custom_login_edittext"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/iconAdress"
               android:layout_width="32dp"
               android:layout_height="40dp"
               android:src="@drawable/userlocation"
               android:layout_marginLeft="10dp"
               />

           <EditText
               android:id="@+id/edtUserAddressCreateAcc"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:layout_marginLeft="10dp"
               android:background="@drawable/custom_edtext"
               android:hint="Address"
               android:padding="8dp" />
       </LinearLayout>


       <LinearLayout
           android:id="@+id/linear4"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/linear3"
           android:layout_marginLeft="24dp"
           android:layout_marginTop="15dp"
           android:layout_marginRight="24dp"
           android:orientation="horizontal"
           android:padding="8dp"
           android:background="@drawable/custom_login_edittext"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/iconPassword"
               android:layout_width="32dp"
               android:layout_height="40dp"
               android:layout_marginLeft="10dp"
               android:src="@drawable/userpassword"
               />

           <EditText
               android:id="@+id/edtUserPasswordCreateAcc"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:layout_marginLeft="10dp"
               android:background="@drawable/custom_edtext"
               android:inputType="textPassword"
               android:hint="Password"
               android:padding="8dp" />
       </LinearLayout>
       <LinearLayout
           android:id="@+id/linear5"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/linear4"
           android:layout_marginLeft="24dp"
           android:layout_marginTop="15dp"
           android:layout_marginRight="24dp"
           android:padding="8dp"
           android:orientation="horizontal"
           android:background="@drawable/custom_login_edittext"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/iconPassword2"
               android:layout_width="32dp"
               android:layout_height="40dp"
               android:src="@drawable/userpassword"
               android:layout_marginLeft="10dp"
               />

           <EditText
               android:id="@+id/edtUserAgainPasswordCreateAcc"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:layout_marginLeft="10dp"
               android:background="@drawable/custom_edtext"
               android:hint="Enter password again"
               android:inputType="textPassword"
               android:padding="8dp" />
       </LinearLayout>

       <Button
           android:id="@+id/btnCreateAcc"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="20sp"
           android:padding="8dp"
           android:layout_marginLeft="24dp"
           android:layout_marginTop="20dp"
           android:layout_marginRight="24dp"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           android:background="@drawable/custom_btn_create"
           android:text="Create Account"
           android:textColor="@color/white"
           android:textAllCaps="false"
           android:layout_marginBottom="40dp"
           app:layout_constraintTop_toBottomOf="@id/linear5" />
   </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>