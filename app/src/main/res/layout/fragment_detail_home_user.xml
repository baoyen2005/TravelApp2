<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.userfragment.DetailFragmentHomeUser">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgTourist1InUserHome"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/custom_image_tourist_first"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/imgIconBackInUserHome"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/custom_icon_in_image_in_user_home_fragment"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="@+id/imgTourist1InUserHome"
                app:layout_constraintTop_toTopOf="@+id/imgTourist1InUserHome">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/imgIconFavorInUserHome"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/custom_icon_in_image_in_user_home_fragment"
                android:gravity="center"
                app:layout_constraintRight_toRightOf="@+id/imgTourist1InUserHome"
                app:layout_constraintTop_toTopOf="@+id/imgTourist1InUserHome">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_favorite_24" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/imgIconUnlikeInUserHome"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="25dp"
                android:visibility="gone"
                android:background="@drawable/custom_icon_in_image_in_user_home_fragment"
                android:gravity="center"
                app:layout_constraintRight_toRightOf="@+id/imgTourist1InUserHome"
                app:layout_constraintTop_toTopOf="@+id/imgTourist1InUserHome">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/broken_heart" />
            </LinearLayout>
            <ImageView
                android:id="@+id/imgTourist2InUserHome"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"

                android:background="@drawable/custom_image_tourists_after"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgTourist1InUserHome"
                app:layout_constraintWidth_percent="0.2" />

            <ImageView
                android:id="@+id/imgTourist3InUserHome"
                android:layout_width="0dp"
                android:layout_height="70dp"

                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_image_tourists_after"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toRightOf="@id/imgTourist2InUserHome"
                app:layout_constraintTop_toBottomOf="@id/imgTourist1InUserHome"
                app:layout_constraintWidth_percent="0.2" />

            <ImageView
                android:id="@+id/imgTourist4InUserHome"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"

                android:background="@drawable/custom_image_tourists_after"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toRightOf="@id/imgTourist3InUserHome"
                app:layout_constraintTop_toBottomOf="@id/imgTourist1InUserHome"
                app:layout_constraintWidth_percent="0.2" />

            <ImageView
                android:id="@+id/imgTourist5InUserHome"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/custom_image_tourists_after"

                android:scaleType="centerCrop"
                app:layout_constraintLeft_toRightOf="@id/imgTourist4InUserHome"
                app:layout_constraintTop_toBottomOf="@id/imgTourist1InUserHome"
                app:layout_constraintWidth_percent="0.2" />

            <TextView
                android:id="@+id/txtTouristDestinationNameInUserHome"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:background="@color/background"
                android:fontFamily="@font/merriweatherbold"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgTourist2InUserHome" />

            <ImageView
                android:id="@+id/iconLocationInUserHome"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/iconlocation"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtTouristDestinationNameInUserHome" />

            <TextView
                android:id="@+id/txtTouristPlaceInUserHome"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:background="@color/background"
                android:fontFamily="@font/poppinsregular"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/iconLocationInUserHome"
                app:layout_constraintTop_toBottomOf="@id/txtTouristDestinationNameInUserHome" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintRatingbarDetailUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTouristPlaceInUserHome">

                <RatingBar
                    android:id="@+id/ratingBarInUserHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:numStars="5"
                    android:progressTint="#FDD835"
                    android:rating="2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtVoteStarInUserHome"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/custom_icon_in_image_in_user_home_fragment"
                    android:gravity="center"
                    android:text="@string/vote"
                    android:layout_marginTop="5dp"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toRightOf="@id/ratingBarInUserHome"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.15" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvAboutInUserHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:text="@string/about"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraintRatingbarDetailUser" />

            <TextView
                android:id="@+id/txtContentInUserHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:background="@color/background"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAboutInUserHome" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>